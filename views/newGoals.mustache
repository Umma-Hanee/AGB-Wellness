<html>
<head>
{{>header}}
</head>
<body class="container">
<h2>Add Goal</h2>
<form method="post" role="form">
<div class="form-group">
<label for="category"> Goal Category:</label>
<select id="category" name="category">
<option value="nutrition">Nutrition</option>
<option value="fitness">Fitness</option>
<option value="mentalHealth">Mental Health</option>
</select>
</div>
<div class="form-group">
<label for="goalname"> Goal Name:</label>
<textarea class="form-control" id="goalname" name="goalname"
placeholder="Goal Name" required>
</textarea>
</div>
<div class="form-group">
 <label for="day">Start Date:</label>
  <input type="date" id="day" name="day" required>
 </div>
 <div class="form-group">
  <label for="time">Select a time:</label>
  <input type="time" id="time" name="time">
</div>
<div class="form-group">
<label for="repeat">Repeat:</label>
<select id="repeat" name="repeat" required>
<option value="weekly">Weekly</option>
<option value="daily">Daily</option>
</select>
</div>
<div class="form-group">
<label for="shortDescription">Short Description:</label>
<textarea class="form-control" id="shortDescription" name="shortDescription"
placeholder="short Description" rows="3"  required>
</textarea>
</div>
<div class="form-group">
<input type="submit" value="Post Goal" class="btn btn-primary">
</div>
 </form>
</body>
</html>